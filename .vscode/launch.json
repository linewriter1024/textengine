    "version": "0.2.0",
    "configurations": [
        {
            "type": "java",
            "name": "Current File",
            "request": "launch",
            "mainClass": "${file}"
        },
        {
            "type": "java",
            "name": "Ember",
            "request": "launch",
            "mainClass": "com.benleskey.textengine.cli.Main",
            "projectName": "textengine",
            "args": ["--showlog", "--plugin", "com.benleskey.textengine.plugins.ember.EmberPlugin"]
        },
        {
            "type": "java",
            "name": "Highfantasy",
            "request": "launch",
            "mainClass": "com.benleskey.textengine.cli.Main",
            "projectName": "textengine",
            "args": ["--showlog", "--plugin", "com.benleskey.textengine.plugins.highfantasy.HighFantasyPlugin"]
        }
    ]
}